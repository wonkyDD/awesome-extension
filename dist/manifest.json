{
    "manifest_version": 3,
  
    "name": "yd-extension",
    "description": "Help using yd-downloader-client",
    "version": "0.1.0",
  
    "options_ui": {
        "page": "options.html"
    },
  
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
  
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ],
  
    "background": {
        "service_worker": "background.js"
    },
  
    "permissions": [
        "storage"
    ],
  
    "host_permissions": [
        "<all_urls>"
    ]
}